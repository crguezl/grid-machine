# GRID_REMOTE_MACHINE must point to the remote machine
# to be used inside the tests (make test).
# Automatic ssh authentification with GRID_REMOTE_MACHINE
# is assumed
export MACHINES='orion beowulf pp2'
export GRID_REMOTE_MACHINE=pp2
export PERL5LIB=$PERL5LIB:`pwd`/lib
export PATH=${PATH}:`pwd`/scripts
export DEVELOPER=$USER
